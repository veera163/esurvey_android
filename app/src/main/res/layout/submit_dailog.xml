<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:textColor="@color/primary_text"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:id="@+id/txt_message"
        android:textSize="18sp"
        android:text="There is some message."/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_skip"
        android:textColor="@color/blue_grey_500"
        android:layout_below="@+id/txt_message"
        android:layout_alignParentRight="true"
        android:text="Skip and Submit"
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/fab_margin"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_capture"
        android:layout_below="@+id/txt_message"
        android:textColor="@color/blue_marino"
        android:text="Capture"
        android:layout_toLeftOf="@+id/btn_skip"
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/fab_margin"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cancel"
        android:layout_below="@+id/txt_message"
        android:textColor="@color/red_900"
        android:text="Cancel"
        android:layout_toLeftOf="@+id/btn_capture"
        android:background="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/fab_margin"/>



</RelativeLayout>
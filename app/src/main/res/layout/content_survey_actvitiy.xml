<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.anyasoft.es.surveyapp.question.SurveyActvitiy"
    tools:showIn="@layout/activity_survey_actvitiy">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Your Questions?"
        android:id="@+id/tvQuestion"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:gravity="center_vertical"
        android:textSize="@dimen/questionTextSize"
        android:layout_alignParentTop="true"
        android:textColor="@color/blue_grey_500"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdgAnswer"
        android:layout_below="@+id/edtResponse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option A"
            style="@style/OptionTextViewStyle"
            android:id="@+id/rdOptionA"
            android:layout_below="@+id/tvQuestion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option B"
            style="@style/OptionTextViewStyle"
            android:id="@+id/rdOptionB"
            android:layout_below="@+id/rdOptionA"
            android:layout_alignParentLeft="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option C"
            style="@style/OptionTextViewStyle"
            android:id="@+id/rdOptionC"
            android:layout_below="@+id/rdOptionB"
            android:layout_alignParentLeft="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option D"
            style="@style/OptionTextViewStyle"
            android:id="@+id/rdOptionD"
            android:layout_below="@+id/rdOptionC"
            android:layout_alignParentLeft="true"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option E"
            style="@style/OptionTextViewStyle"
            android:id="@+id/rdOptionE"
            android:layout_below="@+id/rdOptionD"
            android:layout_alignParentLeft="true"
            />
    </RadioGroup>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option A"
        style="@style/OptionTextViewStyle"
        android:id="@+id/tvOptionA"
        android:visibility="invisible"
        android:layout_below="@+id/tvQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option B"
        android:id="@+id/tvOptionB"
        android:visibility="invisible"
        style="@style/OptionTextViewStyle"
        android:layout_below="@+id/tvOptionA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option C"
        android:id="@+id/tvOptionC"
        android:visibility="invisible"
        style="@style/OptionTextViewStyle"
        android:layout_below="@+id/tvOptionB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option D"
        android:id="@+id/tvOptionD"
        android:visibility="invisible"
        style="@style/OptionTextViewStyle"
        android:layout_below="@+id/tvOptionC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnNext"
        android:background="@drawable/btn_next"
        style="@style/OptionTextViewStyle"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/next"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/OptionTextViewStyle"
        android:id="@+id/btnPause"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:text="@string/pause"/>



    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:visibility="visible"
        android:id="@+id/edtResponse"
        android:layout_below="@+id/tvQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

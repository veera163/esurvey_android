<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OptionTextViewStyle">
        <item name="android:textSize">@dimen/questionTextSize</item>
        <item name="android:minHeight">@dimen/minTextViewHeight</item>
        <item name="android:minWidth">@dimen/minTextViewWidth</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
    </style>

    <style name="TextInputLayoutStyle">
        <item name="android:textSize">@dimen/questionTextSize</item>
        <item name="android:minHeight">@dimen/minEditTextHeight</item>
        <item name="android:minWidth">@dimen/minEditTextWidth</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom</item>
    </style>

</resources>
